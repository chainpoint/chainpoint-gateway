{
  "name": "chainpoint-node",
  "description": "A Chainpoint Network Node is a key part of a scalable solution for anchoring data to public blockchains.",
  "version": "2.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "test": "mocha tests/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.{json,css,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "keywords": [
    "Chainpoint",
    "bitcoin",
    "lightning",
    "Tierion",
    "node",
    "hash",
    "blockchain",
    "crypto",
    "cryptography",
    "sha256"
  ],
  "author": "Jason Bukowski <jason@tierion.com> (https://tierion.com)",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "async-await-parallel": "^1.0.0",
    "async-retry": "^1.2.3",
    "blake2s-js": "^1.3.0",
    "bluebird": "^3.5.5",
    "chainpoint-binary": "^4.1.0",
    "chainpoint-parse": "^3.3.1",
    "chalk": "^2.4.2",
    "envalid": "^4.2.0",
    "envfile": "^3.0.0",
    "executive": "^1.6.3",
    "ip": "^1.1.5",
    "jmespath": "^0.15.0",
    "js-binary": "^1.2.0",
    "level-rocksdb": "^4.0.0",
    "ln-service": "^43.2.0",
    "lnrpc-node-client": "https://github.com/Tierion/lnrpc-node-client.git",
    "lodash": "^4.17.11",
    "merkle-tools": "^1.4.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "restify": "^8.3.3",
    "restify-cors-middleware": "^1.1.1",
    "restify-errors": "^6.1.1",
    "uuid": "^3.3.2",
    "uuid-time": "^1.0.0",
    "uuid-validate": "^0.0.3",
    "validator": "^10.11.0",
    "winston": "^3.2.1",
    "winston-papertrail": "^1.0.5"
  }
}
